<% if logged_in? %>
<div class="rounded" style="background-color:<%= cc(1) %>;"><div style="padding:5px;">
	<h1>Hallo, <%= User[session[:user_id]].longname %>!</h1>
	Mitglied in: <%= user_acl %><br>
	(<%= link_to("Logout", "/logout") %>)
</div></div>
	<%= partial :sidebar %>
<% else %>
<!--h3>Piraten-Login</h3-->
<div class="rounded" style="background-color:<%= cc(1) %>;"><div style="padding:5px;">
	<form class="openid_login" method="post" accept-charset="UTF-8" action='/oidlogin'>
		<label for="openid_server">Dein OpenID-Server:</label>
		<% d = oidsrv(:list) %>
		<select name="openid_server" style="width:180px" size="<%= d.length %>">
		<% for i in 0..(d.length-1) %>
        <option value="<%= i %>" <%= i == 0 ? "selected" : "" %>><%= d[i] %></option>
        <% end %>
    	</select>
		<br>
		<label for="openid_identifier">ID oder Benutzername</label>
		<input type="text" name="openid_identifier" 
		style="background: url(http://openid.net/images/login-bg.gif) no-repeat #FFF 5px; padding-left: 25px; width:150px;" /><p></p>
		<center><input type="submit" class="btn" value="Login" /></center>
		<br><a href="/text/loginprobs">Probleme beim Login?</a>
	</form>
</div></div>
